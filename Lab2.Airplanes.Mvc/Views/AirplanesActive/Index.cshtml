@model List<Lab2.Airplanes.Mvc.Models.AirplaneViewModel>

@{
    ViewData["Title"] = "Airplanes (Active)";
}

<h2>Airplanes (Active)</h2>

<p>
    <a asp-controller="Airplanes" asp-action="Index">Back to All</a> |
    <a asp-controller="AirplanesInactive" asp-action="Index">View Inactive</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Model</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Model</td>
                <td>Active</td>
                <td>
                    <form asp-action="Inactivate" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-warning btn-sm">Inactivate</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
